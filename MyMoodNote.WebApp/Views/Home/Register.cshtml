@using MyMoodNote.Entities.ValueObjects
@model RegisterViewModel

@{
    /**/

    ViewBag.Title = "MyMoodNote Kayıt Sayfası";
}


<link href="~/Content/Login.css" rel="stylesheet" />
<style type="text/css">
    .validation-summary-errors {
        border: 2px dotted #a94442;
        background-color:#d76663;
        border-radius: 8px; 

    }

    .validation-summary-errors ul {
        list-style: none;
        padding:10px;
        color:#fff;

    }
</style>
@using (Html.BeginForm())
{

    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Kayıt Formu </h1>
                </div>
                <div class="main-content">

                    @Html.ValidationSummary(false)

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email adresiniz" })
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifre", type = "password" })
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.RePassword, new { @class = "form-control", placeholder = "Tekrar Şifre giriniz", type = "password" })
                    </div>

                    <div class="form-group ">
                        <button type="submit" class="btn btn-danger btn-lg btn-block login-button">Kayıt Ol</button>
                    </div>


                </div>
            </div>
        </div>
    </section>


}
<script>
    $(function () {

        $("footer").parent().hide();
    });


</script>