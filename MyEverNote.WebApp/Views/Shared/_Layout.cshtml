<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Shop Homepage - Start Bootstrap Template</title>
    <script src="~/js/jquery.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <link href="~/css/shop-homepage.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Menü</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">My Mood Note</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/Home/MostLiked">
                        <span class="glyphicon glyphicon-star" ></span>Beğenilenler</a>
                    </li>
                    <li>
                        <a href="/Home/Index">
                        <span class="glyphicon glyphicon-th-list"></span>Son Yazılanlar</a>
                    </li>
                    <li>
                        <a href="/Home/About">
                        <span class="glyphicon glyphicon-info-sign"> </span>Hakkımızda </a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">

                    <li>
                        <a href="#">
                            <span class="glyphicon glyphicon-log-in"></span>Giriş
                        </a>
                    </li>

                    <li>
                        <a href="#">
                            <span class="glyphicon glyphicon-plus-sign"></span>Üye ol
                        </a>
                    </li>


                    <li>
                        <a href="#">
                            <span class="glyphicon glyphicon-user"></span>Kullanıcı Adı
                        </a>
                    </li>

                    <li>
                        <a href="#">
                            <span class="glyphicon glyphicon-log-out"></span>Çıkış
                        </a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    @RenderBody()

    <!-- /.container -->
    <div class="container">
        <hr>
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-4">
                    <h4>
                       Önemli Linkler
                    </h4>
                    <p>
                        <ul>
                            <li>
                                <a href="#"> <span class="glyphicon glyphicon-cloud-download"></span>Facebook</a>
                            </li>
                            <li>
                                <a href="#"> <span class="glyphicon glyphicon-pause"></span>Twitter</a>
                            </li>
                            <li>
                                <a href="#"> Instagram</a>
                            </li>
                            <li>
                                <a href="#"> LinkedIn</a>
                            </li>
                        </ul>
                    </p>
                </div>
                <div class="col-lg-4">
                    <p> Tüm Hakları Saklıdır. Copyright &copy;@DateTime.Now.Year</p>
                </div>

                <div class="col-lg-4">
                    <h5>
                        <strong>E-Bülten Üyeliği</strong>
                    </h5>
                    <p>
                        <input type="text" placeholder="E-posta adresiniz" class="form-control col-lg-8"/>
                        <button type="submit" class="btn btn-primary">Gönder</button>
                    </p>
                </div>
            </div>
        </footer>
    </div>
    <!-- /.container -->

</body>
</html>